            }
          },
          {
            "if": {
              "properties": {
                "type": {
                  "const": "AWS Signature"
                }
              }
            },
            "then": {
              "properties": {
                "client_id": {
                  "_escapeUI": {
                    "name": "client_id",
                    "label": "Client ID",
                    "inputType": "text"
                  },
                  "description": "The client ID in AWS",
                  "type": "string"
                }
              },
              "additionalProperties": false,
              "required": [
                "client_id"
              ]
            }
          },
          {
