            "headers",
            "url"
          ]
        },
        "allOf": [
          {
            "if": {
              "properties": {
                "type": {
                  "const": "SRP"
                }
              }
            },
            "then": {
              "properties": {
                "client_id": {
                  "_escapeUI": {
                    "name": "client_id",
