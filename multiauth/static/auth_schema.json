                },
                "pool_id": {
                  "_escapeUI": {
                    "name": "pool_id",
                    "label": "Pool ID",
                    "inputType": "text",
                    "placeholder": "eu-west-3_xxxxxxxxx"
                  },
                  "description": "The ID of the pool of the clients",
                  "type": "string"
                }
              },
              "additionalProperties": false,
              "required": [
                "client_id",
                "pool_id"
