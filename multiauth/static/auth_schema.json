          },
          {
            "if": {
              "properties": {
                "type": {
                  "const": "Password Authentication"
                }
              }
            },
            "then": {
              "properties": {
                "client_id": {
                  "_escapeUI": {
                    "name": "client_id",
                    "label": "Client ID",
                    "inputType": "text"
                  },
